doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='../Public/css/general.css', type='text/css' )
    link(rel='stylesheet', href='../Public/css/admin.css', type='text/css' )
    link(rel='icon', sizes='16x16 32x32 48x48 64x64', href='https://img.icons8.com/doodle/48/000000/popcorn.png')
    script(src='../Public/js/menu.js' defer)
    script(src='../Public/js/admin.js' defer)
    title Admin
  body
    .menuP 
      include ./adminMenu.pug
    .mainContainer
      .containerAdmin
        .titleAdmin
          h1 Películas añadidas
      .filmContainer
          if resultM
            for result in resultM  
              .favMovies
                .divPoster
                  img.Poster(src=result.Poster)
                .containerText
                  .textTitle 
                    a(href=`../search/${result.Title}`) 
                      h1 #{result.Title} 
                  .addDel  
                    a(href=`#`)
                      img#deleteMovie.iconsAdmin(src="../Public/img/trash.png" onclick="remove('" + result.Title + "')" name="deleteButton")
                    a(href=`/editMovie/?data=${result.IdMovie}`)
                      img#editMovieButton.iconsAdmin(src="../Public/img/edit.png")
                  .textInfo   
                    p Año: #{ result.Year}
                    p Director: #{result.Director}
                    p Actores : '#{result.Actors}'   
                    p Duración: '#{result.Runtime} 
                    p Género: '#{result.Genre} 
                    p Idiomas : '#{result.Language}' 
                    p Valoración : '#{result.imdbRating}'
