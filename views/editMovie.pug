doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='../Public/css/admin.css', type='text/css' )
    script(src='../Public/js/adminEdit.js' defer)
    title Document
  body
    h2 EDITAR PELICULA
    form#formEditMovie
      label Titulo
      input#title(type='text' placeholder='Título' name="title" value= data[0].Title required) 
      br
      label Año
      input#year(type='number' placeholder='Año' name="year" value= data[0].Year required)
      br
      label Director
      input#director(type='text' placeholder='Director' name="director" value= data[0].Director required)
      br
      label Actores
      input#actors(type='text' placeholder='Actores' name="actors" value= data[0].Actors required)
      br
      label Idioma
      input#language(type='text' placeholder='Idioma' name="language" value= data[0].Language required)
      br
      label Puntuación
      input#rating(type='number' placeholder='Puntuación' name="rating" value= data[0].imdbRating required)
      br
      label Género
      input#genre(type='text' placeholder='Género' name="genre" value= data[0].Genre required)
      br
      label Duración
      input#duration(type='number' placeholder='Duración' name="duration"  value= data[0].Runtime required)
      br
      label Imagen
      input#poster(type='text' placeholder='Imagen' name="poster"  value= data[0].Poster required)
      br
      label Id 
      input#IdMovie(type="text" name="IdMovie" value=data[0].IdMovie readonly)
      br
      button#editMovieButton(type='submit') Aceptar
      br
      a(href=`/admin`) 
        button#backButton(type='button') Volver