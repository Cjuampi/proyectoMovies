doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='../Public/css/general.css', type='text/css' )
    link(rel='stylesheet', href='../Public/css/favMovies.css', type='text/css' )
    link(rel='icon', sizes='16x16 32x32 48x48 64x64', href='https://img.icons8.com/doodle/48/000000/popcorn.png')
    script(src='../Public/js/menu.js' defer)
    title Mis películas
  body
    .menuP 
      include ./menu.pug 
    .containerFavA

      .containerFavP
    
        .titleFavP
          h1 MIS PELÍCULAS
      .filmContainer
            if arrayVacio              
              for result in arrayVacio
                .favMovies
                  .divPoster
                    img.Poster(src=result.Poster) 
                  .containerText
                    .resulTitle
                      a(href=`../search/${result.Title}`) 
                        h2 #{result.Title}
                    .resultStar
                      a(href=`../deleteFilm/${result.imdbID}`)  
                        img.favStar(src="../Public/img/unfav.png") 
                    .resultText
                      p Año: #{ result.Year}
                      p Director: #{result.Director}
                      p Actores : '#{result.Actors}'   
                      p Duración: '#{result.Runtime} 
                      p Género: '#{result.Genre} 
                      p Idiomas : '#{result.Language}' 
                      p Valoración : '#{result.imdbRating}'